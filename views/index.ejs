<%- include("partials/header.ejs") %>

<body>
    <%- include("partials/homenavbar.ejs") %>
    <div class="jumbotron">
        <h3 class="display-4">Bem vindo</h3>
        <p class="lead">Procure novos artigos</p>
    </div>
    <div class="container">
        <% if (typeof erro != 'undefined') { %>
            <div class="alert alert-danger" role="alert">
                <%= erro %>
            </div>
        <% } %>

        <% articles.rows.forEach(article => { %>
        <div class="card mb-4">
            <div class="card-header">
                <h3><%= article.title %></h3>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
        </div>
        <% }); %>

        <% if (articles.count > 4) { %>
        <div class="row mb-4">
            <div class="col col-12 mb-2">
                <a class="btn btn-primary" style="float:right;" href="/articles/page/2">Next >>></a>
            </div>
        </div>
        <% } %>
    </div>
</body>
<%- include("partials/footer.ejs") %>